<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration>
    <!-- берет лог сообщения и отправляет его туда, куда мы укажем (в нашем случае на консоль)-->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="target" value="System.out"/>
<!-- задает формат сообщения-->
        <layout class="org.apache.log4j.PatternLayout">
            <param name="conversionPattern" value="[%d{HH:mm:ss,SSS}] %p [%c: %L] %m%n"/>
        </layout>
    </appender>

    <root> <!-- сам логгер-->
        <level value="trace"/> <!-- отобрать логи от самого высокого уровня Fatal до уровня Trace включительно-->
        <appender-ref ref="console"/> <!-- указываем название appender-->
    </root>

</log4j:configuration>